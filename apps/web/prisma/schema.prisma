generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  FAN
  CREATOR
  ADMIN
}

enum MediaVisibility {
  PUBLIC
  PAY_PER_VIEW
  SUBSCRIBERS
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  FILE
}

enum MediaAssetKind {
  PRIMARY // main file
  GALLERY // extra gallery images
  COVER // separate cover file
}

enum WalletDepositStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  hashedPassword String?
  role           Role     @default(FAN)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  displayName    String? // optional for fans

  creatorProfile Creator?

  // Orders + classic purchases
  orders    Order[]    @relation("UserOrders")
  purchases Purchase[] @relation("UserPurchases")

  // New media-purchase tracking
  mediaPurchases MediaPurchase[] @relation("UserMediaPurchases")

  // Balance + wallet
  balance        Balance?
  walletAccount  WalletAccount?
  walletDeposits WalletDeposit[]
}

model Creator {
  id              String   @id @default(cuid())
  userId          String   @unique
  handle          String   @unique
  displayName     String
  bio             String   @default("")
  avatarUrl       String   @default("")
  bannerUrl       String   @default("")
  defaultCurrency String   @default("USD")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user  User    @relation(fields: [userId], references: [id])
  media Media[]
}

model Media {
  id            String          @id @default(cuid())
  creatorId     String
  type          MediaType
  title         String
  caption       String          @default("")
  fileUrl       String
  coverUrl      String          @default("")
  visibility    MediaVisibility @default(PAY_PER_VIEW)
  priceUsdCents Int?
  isActive      Boolean         @default(true)
  createdAt     DateTime        @default(now())

  creator Creator @relation(fields: [creatorId], references: [id])

  // Classic purchases
  purchases Purchase[] @relation("MediaPurchases")

  // New media-purchase tracking
  mediaPurchases MediaPurchase[] @relation("MediaMediaPurchases")

  assets MediaAsset[]
}

model Order {
  id             String   @id @default(cuid())
  buyerId        String
  creatorId      String
  mediaId        String?
  kind           String
  currency       String
  amountUsdCents Int
  amountLamports String
  destination    String
  reference      String   @unique
  status         String   @default("PENDING")
  signature      String?
  createdAt      DateTime @default(now())

  buyer User @relation("UserOrders", fields: [buyerId], references: [id])
}

model Purchase {
  id        String   @id @default(cuid())
  userId    String
  mediaId   String
  orderId   String   @unique
  createdAt DateTime @default(now())

  user  User  @relation("UserPurchases", fields: [userId], references: [id])
  media Media @relation("MediaPurchases", fields: [mediaId], references: [id])
}

model MediaPurchase {
  id             String   @id @default(cuid())
  userId         String
  mediaId        String
  amountLamports BigInt
  createdAt      DateTime @default(now())

  user  User  @relation("UserMediaPurchases", fields: [userId], references: [id])
  media Media @relation("MediaMediaPurchases", fields: [mediaId], references: [id])
}

model Balance {
  userId   String @id
  usdCents Int    @default(0)

  user User @relation(fields: [userId], references: [id])
}

model MediaAsset {
  id        String         @id @default(cuid())
  mediaId   String
  url       String
  kind      MediaAssetKind @default(GALLERY)
  sortOrder Int            @default(0)
  createdAt DateTime       @default(now())

  media Media @relation(fields: [mediaId], references: [id])
}

model WalletAccount {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id])
  balanceLamports BigInt   @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  // no deposits[] here â€“ we don't need a relation to WalletDeposit
}

model WalletDeposit {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  address        String
  txSignature    String?
  amountLamports BigInt
  status         WalletDepositStatus @default(PENDING)

  createdAt   DateTime  @default(now())
  confirmedAt DateTime?
}
